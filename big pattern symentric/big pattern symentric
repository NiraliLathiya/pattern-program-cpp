#include<iostream>
using namespace std;

int main()
{
    int loop=0;
    while(loop != -1)
        {
    cout<<"This program prints the symmetric pyramid pattren\n\n";
    int i,j,m=7;
    for(i=1;i<=7;i++)
    {   if(i<=4)
        {
        for(j=1;j<=7;j++)
        {
            if(j>=(5-i) && j<=(i+(3)))
            {
                cout<<"*";
            }
            else
                cout<<" ";
        }}
        else
        {
                for(j=1;j<=m;j++)
        {
            if(j>=(i-3) && j<=(11-i))
            {
                cout<<"*";
            }
            else
                cout<<" ";
        }

    }
    cout<<endl;
}
    cout<<"press any key to continue  or press -1 quit .......\n";
    cin>>loop;
    }
}
